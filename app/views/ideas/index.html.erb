<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-xs-4">
        <h4><%= link_to idea.name, idea %></h4></div>
        <div class="col-xs-4">
        <%= idea.description %>
        </div>
        <div class="col-xs-4">
        <%= image_tag idea.picture_url, width: '100%' if idea.picture.present?%>
      </div>
    <% end %>
  </div>
<% end %>